---
import Logo from "./Logo.astro";
---

<nav
  class="z-20 flex items-center justify-between bg-white h-16 px-4 sm:px-6 md:px-8 top-0 sticky"
>
  <Logo />
  <h1
    class="pl-4 text-base sm:text-lg md:text-xl lg:text-2xl font-light md:font-extralight"
  >
    Borja Garc√≠a Prieto
  </h1>
  <ul
    class="hidden xl:flex items-center text-base lg:text-lg justify-between space-x-8 ml-auto"
  >
    <li>
      <a href="/">INICIO</a>
    </li>
    <li class="relative group z-50">
      <button class="focus:outline-none">CARTA</button>
      <ul
        class="absolute left-0 hidden mt-2 w-48 bg-white border border-gray-200 rounded shadow-lg group-hover:block group-focus-within:block"
      >
        <li>
          <a href="/carta-barreo" class="block px-4 py-2 hover:bg-gray-100"
            >BARREO</a
          >
        </li>
        <li>
          <a href="/carta-mesa" class="block px-4 py-2 hover:bg-gray-100"
            >MESA</a
          >
        </li>
      </ul>
    </li>
    <li>
      <a href="/manjares">MANJARES</a>
    </li>
    <li>
      <a href="/eventos">EVENTOS</a>
    </li>
    <li>
      <a href="/reservas">RESERVAS</a>
    </li>
    <li>
      <a href="/contacto">CONTACTO</a>
    </li>
  </ul>
  <div class="xl:hidden ml-auto">
    <button id="menu-button" class="focus:outline-none">
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
    <ul
      id="menu"
      class="hidden flex-col space-y-1 bg-white border border-gray-200 rounded shadow-lg absolute right-0 top-0"
    >
      <li>
        <a href="/" class="block px-4 py-2 hover:bg-gray-100">INICIO</a>
      </li>
      <li>
        <a href="/carta-barreo" class="block px-4 py-2 hover:bg-gray-100"
          >BARREO</a
        >
      </li>
      <li>
        <a href="/carta-mesa" class="block px-4 py-2 hover:bg-gray-100">MESA</a>
        <li>
          <li>
            <a href="/manjares" class="block px-4 py-2 hover:bg-gray-100"
              >MANJARES</a
            >
          </li>
          <li>
            <a href="/eventos" class="block px-4 py-2 hover:bg-gray-100"
              >EVENTOS</a
            >
            <li>
              <a href="/reservas" class="block px-4 py-2 hover:bg-gray-100"
                >RESERVAS</a
              >
            </li>
          </li>
          <a href="/contacto" class="block px-4 py-2 hover:bg-gray-100"
            >CONTACTO</a
          >
        </li>
      </li>
    </ul>
  </div>

  <script>
    document.getElementById("menu-button").addEventListener("click", () => {
      const menu = document.getElementById("menu");
      menu.classList.toggle("hidden");
    });
  </script>

  <style>
    .group:hover .group-hover\:block,
    .group:focus-within .group-focus-within\:block {
      display: block;
    }
  </style>
</nav>
