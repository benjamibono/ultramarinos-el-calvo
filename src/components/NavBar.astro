---
import Logo from "./Logo.astro";
---

<nav
  class="bg-white flex h-16 items-center justify-between px-4 sticky top-0 xl:h-20 xl:px-10 xxl:h-24 z-20"
>
  <Logo />
  <h1
    class="font-thin mx-auto pl-4 text-base sm:text-lg md:font-extralight md:text-xl lg:text-2xl xl:font-light xxl:text-3xl"
  >
    Borja Garc√≠a Prieto
  </h1>
  <ul
    class="hidden items-center justify-between ml-auto space-x-8 text-base xl:flex sm:text-lg md:text-xl xxl:text-2xl"
  >
    <li>
      <a href="/">INICIO</a>
    </li>
    <li class="group relative z-50">
      <button class="focus:outline-none">CARTA</button>
      <ul
        class="absolute hidden mt-2 w-48 bg-white border border-gray-200 rounded shadow-lg group-hover:block group-focus-within:block"
      >
        <li>
          <a href="/carta-barreo" class="block px-4 py-2 hover:bg-gray-100"
            >BARREO</a
          >
        </li>
        <li>
          <a href="/carta-mesa" class="block px-4 py-2 hover:bg-gray-100"
            >MESA</a
          >
        </li>
      </ul>
    </li>
    <!--<li>
      <a href="/manjares">MANJARES</a>
    </li>
    <li>
      <a href="/eventos">EVENTOS</a>
    </li> -->
    <li>
      <a href="tel:+34956992222">RESERVAS</a>
    </li>
    <li>
      <a href="/contacto">CONTACTO</a>
    </li>
  </ul>
  <div class="ml-auto xl:hidden">
    <button id="menu-button" class="focus:outline-none">
      <svg
        class="h-6 w-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
    <ul
      id="menu"
      class="absolute right-0 top-18 hidden flex-col space-y-1 bg-white border border-gray-200 rounded shadow-lg"
    >
      <li>
        <a href="/" class="block px-4 py-2 hover:bg-gray-100">INICIO</a>
      </li>
      <li>
        <a href="/carta-barreo" class="block px-4 py-2 hover:bg-gray-100"
          >CARTA BARREO</a
        >
      </li>
      <li>
        <a href="/carta-mesa" class="block px-4 py-2 hover:bg-gray-100"
          >CARTA MESA</a
        >
      </li>
      <!--<li>
        <a href="/manjares" class="block px-4 py-2 hover:bg-gray-100"
          >MANJARES</a
        >
      </li> 
      <li>
        <a href="/eventos" class="block px-4 py-2 hover:bg-gray-100">EVENTOS</a>
      </li> -->
      <li>
        <a href="tel:+3495699222" class="block px-4 py-2 hover:bg-gray-100"
          >RESERVAS</a
        >
      </li>
      <li>
        <a href="/contacto" class="block px-4 py-2 hover:bg-gray-100"
          >CONTACTO</a
        >
      </li>
    </ul>
  </div>

  <script>
    const menuButton = document.getElementById("menu-button");
    if (menuButton) {
      menuButton.addEventListener("click", () => {
        const menu = document.getElementById("menu");
        if (menu) {
          menu.classList.toggle("hidden");
        }
      });
    }
  </script>

  <style>
    .group:hover .group-hover\:block,
    .group:focus-within .group-focus-within\:block {
      display: block;
    }
  </style>
</nav>
