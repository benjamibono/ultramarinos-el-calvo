---
import { Image } from "astro:assets";

// Preload de la imagen para mejorar LCP
const preloadImage = {
  src: "/surtido2.webp",
  as: "image",
  type: "image/webp",
};
---

<link rel="preload" href="/surtido2.webp" as="image" type="image/webp" />

<section
  class="relative w-full h-[600px] sm:h-[700px] lg:h-[800px] xxl:h-[1300px] xxxl:h-[1800px]"
>
  <div class="absolute inset-0 overflow-hidden">
    <Image
      src="/surtido2.webp"
      alt="Surtido de productos de ultramarinos"
      class="w-full h-full object-cover object-center print:object-contain"
      width={1920}
      height={1080}
      loading="eager"
      fetchpriority="high"
      sizes="(max-width: 640px) 640px, (max-width: 768px) 768px, (max-width: 1024px) 1024px, 1920px"
      quality={85}
    />
  </div>
  <div
    class="absolute inset-0 flex flex-col items-center justify-center text-center text-white bg-black/50 px-4 sm:px-6 md:px-8 space-y-3 sm:space-y-5 md:space-y-8 lg:space-y-10 xl:space-y-16"
  >
    <h1
      class="text-xs xs:text-sm sm:text-lg md:text-2xl lg:text-4xl xxl:text-6xl font-semibold mb-2 sm:mb-4"
    >
      UN SITIO PA' COMER Y BEBER, PERO BIEN.
    </h1>
    <h2
      class="text-xs sm:text-base md:text-lg lg:text-xl xxl:text-3xl font-medium"
    >
      CONSERVAS, SALAZONES, GUISOS, PRODUCTO, CHACINASâ€¦
    </h2>
  </div>
</section>

<style>
  @media print {
    section {
      break-inside: avoid;
      page-break-inside: avoid;
    }
  }
</style>
