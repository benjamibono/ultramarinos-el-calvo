---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Ultramarinos El Calvo | Borja García | Estrella Michelín | Un sitio pa’ comer y beber. Pero bien. | Conservas, salazones, chacinas..."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="public/LOGO.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <main class="flex flex-col gap-20 md:gap-24">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #f2e6cc;
    overscroll-behavior: none;
  }
  body {
    overscroll-behavior: none;
  }
</style>
