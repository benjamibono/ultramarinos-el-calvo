---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/montserrat";
interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = title.includes("Estrella") ? "es" : "en";
---

<!doctype html>
<html lang={lang} class="font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Ultramarinos El Calvo | Borja García | Estrella Michelín | Ultramarinos, El Calvo, Borja García, Estrella Michelín, Conservas, Salazones, Chacinas, Comer, Beber."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <link rel="canonical" href={Astro.url} />
    <meta
      name="keywords"
      content="Ultramarinos, El Calvo, Borja García, Estrella Michelín, Conservas, Salazones, Chacinas, Comer, Beber"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Ultramarinos El Calvo</title>

    <!-- HTML Meta Tags -->
    <title>Ultramarinos El Calvo</title>
    <meta
      name="description"
      content="Ultramarinos, El Calvo, Borja García, Estrella Michelín, Conservas, Salazones, Chacinas, Comer, Beber."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://www.ultramarinoselcalvo.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Ultramarinos El Calvo" />
    <meta
      property="og:description"
      content="Ultramarinos, El Calvo, Borja García, Estrella Michelín, Conservas, Salazones, Chacinas, Comer, Beber."
    />
    <meta
      property="og:image"
      content="https://www.ultramarinoselcalvo.com/icon.svg"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="ultramarinoselcalvo.com" />
    <meta
      property="twitter:url"
      content="https://www.ultramarinoselcalvo.com"
    />
    <meta name="twitter:title" content="Ultramarinos El Calvo" />
    <meta
      name="twitter:description"
      content=""
    />
    <meta
      name="twitter:image"
      content="https://www.ultramarinoselcalvo.com/icon.svg"
    />
  </head>

  <body class="min-h-screen mx-auto antialiased">
    <slot />
  </body>
</html>
<style>
  html {
    font-family: "Montserrat Variable", sans-serif;
    overscroll-behavior: none;
  }
  body {
    overscroll-behavior: none;
  }
</style>
