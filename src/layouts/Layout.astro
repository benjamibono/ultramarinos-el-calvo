---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/montserrat";
interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = title.includes("Estrella") ? "es" : "en";
---

<!doctype html>
<html lang={lang} class="font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Ultramarinos El Calvo | Borja García | Estrella Michelín | Un sitio pa' comer y beber. Pero bien. | Conservas, salazones, chacinas..."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <link rel="canonical" href={Astro.url} />
    <meta
      name="keywords"
      content="Ultramarinos, El Calvo, Borja García, Estrella Michelín, Conservas, Salazones, Chacinas, Comer, Beber"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen mx-auto antialiased">
    <slot />
  </body>
</html>
<style>
  html {
    font-family: "Montserrat Variable", sans-serif;
    overscroll-behavior: none;
  }
  body {
    overscroll-behavior: none;
  }
</style>
